@{
    /**/
    ViewBag.Title = "DetailIntroducePost";
    Layout = "~/Views/Shared/_Main_SingleBlog_Layout.cshtml";
    var Promotion = ViewBag.Promotion;
}

<div class="blog">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="blog_posts d-flex flex-row align-items-start justify-content-between">

                    <!-- Blog post -->
                    @foreach (var Item in Promotion)
                    {
                    <div class="blog_post">
                        
                        <div class="blog_text">@Item.PromotionName</div>
                        <div class="blog_text">@Item.Content</div>
                        <div class="blog_button"><a href="@Item.MetaTitle">Continue Reading</a></div>
                    </div>
                    }


                </div>
            </div>

        </div>
    </div>
</div>

